<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mooviest.ui.activities.movie_detail.MovieInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/height_linearButtons"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ratings_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:scrollbars="vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_light">
            <TextView
                android:id="@+id/title_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="20dp"
                android:textSize="22sp"

                android:text="@string/synopsis"
                />
            <TextView
                android:id="@+id/movie_released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="20dp"
                android:textSize="18sp"

                android:text="2000"
                />
        </RelativeLayout>



        <TextView
            android:paddingRight="35dp"
            android:paddingLeft="35dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:lineSpacingExtra="5sp"
            android:textSize="16sp"
            android:id="@+id/movie_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:textSize="22sp"
            android:background="@color/grey_light"
            android:id="@+id/title_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genres" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/genres_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:scrollbars="vertical"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>