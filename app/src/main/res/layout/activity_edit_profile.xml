<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mooviest.ui.activities.EditProfileActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <!--<com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/edit_profile_avatar_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:civ_border_color="#000000"
            app:civ_border_width="1dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#63000000"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/edit_profile_avatar_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:fitsSystemWindows="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_change_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera_white"
                android:layout_marginStart="68dp"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="mini"
                android:layout_alignBottom="@+id/edit_profile_avatar_image"
                android:layout_alignStart="@+id/edit_profile_avatar_image" />
        </RelativeLayout>


        <!--  Username Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/error_appearance"
            app:errorEnabled="true">
            <EditText android:id="@+id/input_edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Username"
                android:singleLine="true"
                android:ems="10"
                android:textColor="@color/colorPrimaryDark"/>
        </android.support.design.widget.TextInputLayout>

        <!--  Username Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_edit_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/error_appearance"
            app:errorEnabled="true">
            <EditText android:id="@+id/input_edit_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="First name"
                android:singleLine="true"
                android:ems="10"
                android:textColor="@color/colorPrimaryDark"/>
        </android.support.design.widget.TextInputLayout>


        <!--  Username Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/error_appearance"
            app:errorEnabled="true">
            <EditText android:id="@+id/input_edit_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Last name"
                android:singleLine="true"
                android:ems="10"
                android:textColor="@color/colorPrimaryDark"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/error_appearance"
            app:errorEnabled="true">
            <EditText android:id="@+id/input_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:singleLine="true"
                android:ems="10"
                android:textColor="@color/colorPrimaryDark"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
</LinearLayout>