<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="8dp"
    android:gravity="center_horizontal"
    android:padding="25dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                tools:src="@drawable/the_hobbit_2"
                android:id="@+id/offer_image"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/up_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_favourite_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/left_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_watchlist_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/right_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_seen_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/down_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_blacklist_color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/offer_image"
                android:padding="16dp"
                android:background="@drawable/corner_shape_celebrity">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃ­tulo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top|right"
                android:layout_alignParentRight="true"
                android:background="@drawable/corner_shape_celebrity">
                <TextView
                    android:id="@+id/movie_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textSize="26sp"
                    android:ellipsize="end"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:src="@drawable/ic_favourite_color"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>